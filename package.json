{
  "private": true,
  "name": "yoodoo-goingup-app",
  "description": "My application description",
  "version": "1.0.1",
  "author": "Yoshihide Shiono <shiono.yoshihide@gmail.com>",
  "main": "app/background.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/applepykim/yoodooApp.git"
  },
  "scripts": {
    "dev": "nextron",
    "build": "nextron build",
    "postinstall": "electron-builder install-app-deps",
    "deploy:win3264": "npm run deploy:win32 && npm run deploy:win64",
    "deploy:win32": "electron-builder --win nsis:ia32",
    "deploy:win64": "electron-builder --win nsis:x64",
    "deploy:osx": "electron-builder --mac",
    "deploy": "electron-builder build --win --publish always"
  },
  "dependencies": {
    "axios": "^1.3.3",
    "dotenv": "^16.3.1",
    "dotenv-extended": "^2.9.0",
    "electron-github-autoupdater": "^2.0.0",
    "electron-serve": "^1.1.0",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.1.1",
    "puppeteer": "^20.7.3",
    "puppeteer-core": "^20.7.4",
    "recoil": "^0.7.7",
    "recoil-persist": "^4.2.0"
  },
  "devDependencies": {
    "@types/node": "^18.11.18",
    "@types/react": "^18.0.26",
    "autoprefixer": "^10.4.7",
    "electron": "^21.3.3",
    "electron-builder": "^24.4.0",
    "next": "^12.3.4",
    "nextron": "^8.5.0",
    "postcss": "^8.4.13",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.1.8",
    "typescript": "^4.9.4"
  },
  "build": {
    "productName": "goingup",
    "appId": "net.jetalab.ex.goingUp",
    "asar": true,
    "mac": {
      "target": [
        "default"
      ]
    },
    "files": [
      "!.vscode${/*}"
    ],
    "dmg": {
      "title": "goingup"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": false,
      "createDesktopShortcut": true
    },
    "directories": {
      "buildResources": "./resources/installer/",
      "output": "./dist/",
      "app": "."
    }
  }
}
